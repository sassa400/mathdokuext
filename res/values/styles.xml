<resources>

    <!-- Base application theme, dependent on API level. This theme is replaced -->
    <!-- by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- Theme customizations available in newer API levels can go in -->
        <!-- res/values-vXX/styles.xml, while customizations related to -->
        <!-- backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>
    
    <style name="btnStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/controls_text_size_default</item>
        <item name="android:textColor">@drawable/btn_textcolor_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:background">@drawable/btn_background_selector</item>
    </style>

    <style name="btnImgStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:background">@drawable/btn_background_selector</item>
    </style>

</resources>